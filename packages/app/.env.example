# BeatsChain Web3 Environment Variables

# Web3 Configuration (Required)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_CONTRACT_ADDRESS=0xff1279331af8bd6321e9c1e00574ce8f1b5d023d
NEXT_PUBLIC_CREDIT_CONTRACT_ADDRESS=0x8fa4e195010615d2376381e5de7a8099e2413d75

# Email Services (Choose one - for contact form)
RESEND_API_KEY=your_resend_api_key
# OR
SENDGRID_API_KEY=your_sendgrid_api_key

# Discord Webhook (Optional - for contact notifications)
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Firebase (Legacy - Optional)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id

# Sanity CMS (Optional)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production

# Environment
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_NETWORK=sepolia